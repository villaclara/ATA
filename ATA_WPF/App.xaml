<Application x:Class="ATA_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ATA_WPF"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        

        <!-- adding resource dictionary Dictionary1.xaml to the project 
        where is specified all shared resources for buttons etc -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Dictionary1.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
