<!-- STYLE FOR BORDERS WHEN MOUSE OVER BUTTONS
    BUT NOT WORKING -->
    <Style TargetType="Border" x:Key="borderForButtonsStyle">
        <Setter Property="Background" Value="Black">
            
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Background" Value="Green"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    
    <!-- STYLE FOR THE HEADER TEXT -->
    <Style TargetType="TextBlock" x:Key="styleForHeaderTextBlock">
        <Setter Property="FontFamily" Value="Constantia"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="TextDecorations" Value="Underline"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

            
            <!-- PROCESS NAME style -->
    <Style TargetType="TextBlock" x:Key="styleNameProcess">
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5,0,0,0" />
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    
    <!-- IS ACTIVE style -->
    <Style TargetType="TextBlock" x:Key="styleIsRun">
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <!-- CURRENT UPTIME style -->
    <Style TargetType="TextBlock" x:Key="styleCurrentUptime">
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="10,0,0,0" />
    </Style>
    
    
    <!-- TOTAL UPTIME style -->
    <Style TargetType="TextBlock" x:Key="styleTotalUptime">
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="20,0,-4,0" />
    </Style>

</ResourceDictionary>