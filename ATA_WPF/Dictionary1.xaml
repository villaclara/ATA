<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    
    


    <!-- STYLE FOR BUTTON  
    BUT THE BACKGROUND WILL BE FOR ALL BUTTONS
    MAYBE NEED TO INVENT SOMETHING
    -->
        <Style TargetType="{x:Type Button}" x:Key="styleButtonKey">
            <Setter Property="Background" Value="#FFD8E3ED"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"> 
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border> 
                </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFEDF4F7"/>
                   
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="Black"/>
            </Trigger>
            </Style.Triggers>
        </Style>

